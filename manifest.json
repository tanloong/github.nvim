{
  "manifest_version": 3,
  "name": "GitHub.nvim",
  "version": "1.0",
  "description": "Sync GitHub issues and pull requests to Neovim",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "http://127.0.0.1:9001/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/*/issues/*",
        "https://github.com/*/*/pull/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
